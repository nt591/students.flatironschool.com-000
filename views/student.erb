<!DOCTYPE HTML>
<html lang="en">
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8">
<title>Flatiron School - Developing Professionals</title>

<meta name="HandheldFriendly" content="True">
<meta name="MobileOptimized" content="320">
<meta name="viewport" content="width=device-width; initial-scale=1.0">
<link type="text/plain" rel="lol" href="/humans.lol/">
<link href="../css/style.css" type="text/css" rel="stylesheet">
<link href="../css/prettyPhoto.css" type="text/css" rel="stylesheet">
<link href="../css/tipsy.css" type="text/css" rel="stylesheet">
<link href="../css/matz.css" type="text/css" rel="stylesheet">
<script type="text/javascript" src="../js/libs/jquery-1.4.3.min.js"></script>
<script type="text/javascript" src="../js/libs/modernizr-1.7.min.js"></script>
<script type="text/javascript" src="../js/libs/css3-mediaqueries.js"></script>
<script type="text/javascript" src="../js/libs/jquery.easing.1.2.js"></script>
<script type="text/javascript" src="../js/libs/jquery.visualNav.min.js"></script>
<script type="text/javascript" src="../js/libs/jquery.tipsy.js"></script>
<script type="text/javascript" src="/peel/peel.js"></script>

</head>

<body>
<div id="page">
  <header id="header">
    <div class="center">
      <nav id="main-menu">
        <ul>
          <li class="site-title" style="font-size: 3em; padding-bottom: 10px">The Flatiron School</li>
        </ul>

        <ul>
          <li><a class="menu" href="http://flatironschool.com/#home">About</a></li>
          <li><a class="menu" href="http://flatironschool.com/#program">The Program</a></li>
          <li><a class="menu" href="http://flatironschool.com/#profile">Graduate Profile</a></li>
          <li><a class="menu" href="http://flatironschool.com/#sponsor">Get Involved</a></li>
          <li><a href="http://eepurl.com/nTXCr" target="_blank" style="color: red">&#10029; Apply &#10029;</a></li>
          <li><a class="menu" href="http://flatironschool.com/#people">Our People</a></li>
          <li><a class="menu" href="http://flatironschool.com/#faq">FAQ</a></li>
          <li><a class="menu" href="http://flatironschool.com/#contact">Get In Touch</a></li>
          <li><a href="http://blog.flatironschool.com">Weblog</a></li>
        </ul>
      </nav>
      <ul id="filter" class="mobile-ipad-menu">
        <li id="top"><a class="top-link">Home</a>
          <ul id="controls">
            <li><a href="http://eepurl.com/nTXCr" class="visualNav menu">Apply</a></li>
            <li><a href="http://flatironschool.com/#home" class="visualNav menu">About</a>
            <!-- <li><a href="http://flatironschool.com/#philosophy" class="visualNav">Philosophy</a></li> -->
            <li><a href="http://flatironschool.com/#program" class="visualNav menu">The Program</a></li>
            <li><a href="http://flatironschool.com/#sponsor" class="visualNav">Get Involved</a></li>
            <li><a href="http://flatironschool.com/#faq" class="visualNav">FAQ</a></li>
            <li><a href="http://flatironschool.com/#people" class="visualNav menu">Our People</a></li>
            <li><a href="http://flatironschool.com/#contact" class="visualNav menu">Get In Touch</a></li>
            <li><a href="http://blog.flatironschool.com">Weblog</a></li>
          </ul>
        </li>
      </ul>

      <div class="clear"></div>
    </div>
  </header>

  <section id="about" class="about-us content" style="margin-top: 34px">
    <div class="jrcolumns">
      <!-- LEFT COLUMN -->
      <div id='navcontainer'class="one_third">
        <div class="profile-photo">
          <img src="<%= @student.profile_photo %>"/>
        </div>
        <nav id='side-nav'>
          <ul>
            <li class="email">
              <a href="mailto:<%= @student.email %>">Email</a>
            </li>
            <li class="blog">
              <a href="<%= @student.blog %>">Blog</a>
            </li>
            <li class="linkedin">
              <a href="<%= @student.linked_in %>">LinkedIn</a>
            </li>
            <li class="twitter">
              <a href="<%= @student.twitter %>">Twitter</a>
            </li>
          </ul>
        </nav> <!-- this is the end of side nav -->
      </div>

      <!-- MIDDLE COLUMN -->
      <div class="two_third">
        <h1><%= @student.first_name %> <%= @student.last_name %></h1>
        <h2 id='tagline'><%= @student.tag_line %></h2>
        <p><%= @student.bio %></p>

<br/><br/>
        <h2 id='tagline'>My favorite apps</h2>
        <div class="one_third">
          <h4><%= @student.app_1 %></h4>
          <p><%= @student.app_1_desc %></p>
        </div>
        <div class="one_third">
          <h4><%= @student.app_2 %></h4>
          <p><%= @student.app_2_desc %></p>
        </div>
        <div class="one_third last">
          <h4><%= @student.app_3 %></h4>
          <p><%= @student.app_3_desc %></p>
        </div>
      </div>
      <!-- RIGHT COLUMN -->
      <div class="clear"></div>
      <h2 class="title"><span>Coder Cred</span></h2>
        <div class="columns" style="padding-left: 22px;">
          <div class="coder-cred">
            <div class="one_fifth">
              <a href="<%= @student.github %>">
                <div class="cred-github"></div>
              </a>
            </div>
            <div class="one_fifth">
              <a href="<%= @student.code_school %>">
                <div class="cred-codeschool"></div>
              </a>
            </div>
            <div class="one_fifth">
              <a href="<%= @student.coder_wall %>">
                <div class="cred-coderwall"></div>
              </a>
            </div>
            <div class="one_fifth">
              <a href="<%= @student.stack_overflow %>">
                <div class="cred-stackoverflow"></div>
              </a>
            </div>
            <div class="one_fifth">
              <a href="<%= @student.treehouse %>">
                <div class="cred-treehouse"></div>
              </a>
            </div>                                               
          </div>
        </div>
        <div class="clear"></div>
        <h2 class="title"><span>Social Nerdery</span></h2>
          <div class="one_half">
            <h2> Github Feed</h2>
            <% username = @student.github.split('github.com/')[1] %>
            <script language="JavaScript" src="http://itde.vccs.edu/rss2js/feed2js.php?src=https%3A%2F%2Fgithub.com%2F<%= username %>.atom&chan=n&num=5&desc=1&date=n&targ=y" type="text/javascript"></script>
            <noscript>
            <a href="http://itde.vccs.edu/rss2js/feed2js.php?src=https%3A%2F%2Fgithub.com%2Fcreekace.atom&chan=n&num=5&desc=1&date=n&targ=y&html=y">View RSS feed</a>
            </noscript>
        </div>
        <div class="one_half last">
          <% if @student.twitter && @student.twitterfeed %>
            <a class="twitter-timeline" href="<%= @student.twitter %>" data-widget-id="<%= @student.twitterfeed %>">Tweets by @<%= @student.twitter.match(".com\/(.+)")[1] if @student.twitter.match(".com\/(.+)") %></a>
            <script>!function(d,s,id){var js,fjs=d.getElementsByTagName(s)[0];if(!d.getElementById(id)){js=d.createElement(s);js.id=id;js.src="http://platform.twitter.com/widgets.js";fjs.parentNode.insertBefore(js,fjs);}}(document,"script","twitter-wjs");</script>
          <% end %>
        </div>
        <div class="clear"></div>
        <h2 class="title">&nbsp;</h2>
      </div>
    </div>
  </section>
</body>
</html>
